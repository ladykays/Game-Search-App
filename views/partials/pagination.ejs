<% if (totalPages > 1) { %>
  <div class="max-w-7xl mx-auto mt-8">
    <div class="flex justify-center mt-8">
    <nav class="flex items-center space-x-2">
      <% if (hasPreviousPage) { %>
        <a 
          href="/search-games?search=<%= queryParams %>&page=<%= currentPage - 1 %>"
          class="px-4 py-2 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-700"
        >
          Previous
        </a>
      <% } %>

      <% if (startPage > 1) { %>
        <a 
          href="/search-games?search=<%= queryParams %>&page=1"
          class="px-4 py-2 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-700"
        >
          1
        </a>
        <% if (startPage > 2) { %>
          <span class="px-2 text-gray-400">...</span>
        <% } %>
      <% } %>

      <% for (let i = startPage; i <= endPage; i++) { %>
        <a 
          href="/search-games?search=<%= queryParams %>&page=<%= i %>"
          class="px-4 py-2 border <%= currentPage === i ? 'bg-indigo-600 text-white' : 'border-gray-600 text-gray-300' %> rounded-md hover:bg-gray-700"
        >
          <%= i %>
        </a>
      <% } %>

      <% if (endPage < totalPages) { %>
        <% if (endPage < totalPages - 1) { %>
          <span class="px-2 text-gray-400">...</span>
        <% } %>
        <a 
          href="/search-games?search=<%= queryParams %>&page=<%= totalPages %>"
          class="px-4 py-2 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-700"
        >
          <%= totalPages %>
        </a>
      <% } %>

      <% if (hasNextPage) { %>
        <a 
          href="/search-games?search=<%= queryParams %>&page=<%= currentPage + 1 %>"
          class="px-4 py-2 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-700"
        >
          Next
        </a>
      <% } %>
    </nav>
  </div>
  </div>

  <% } %> 