<%- include("partials/header.ejs") %>
  <main class="flex-grow font-inter">
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h1 class="text-3xl font-bold text-gray-100 mb-4">Genres</h1>
      <% if (genres && genres.length > 0) { %> 
      <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8" >
        <% genres.forEach((genre) => { %> 
            <a class="block group" href="/search?genre=<%= genre.name %>">
              <div class="relative h-64 rounded-lg overflow-hidden shadow-md" >
                <img src="<%= genre.image_background %>" alt="<%= genre.name %>" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300" />
                <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent" ></div>
                <div class="absolute bottom-0 left-0 p-6" >
                  <h3 class="text-xl font-bold text-white"><%= genre.name %></h3>
                  <p class="text-gray-300 mt-1" ><%= genre.games_count %> Games</p>
                </div>
              </div>
            </a>
            <% }) %>
            </div>
<% } %>
    </section> 
  </main>
<%- include("partials/footer.ejs") %>