<%- include('partials/header') %>
<main class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-white mb-6">
    Search Results for "<%= searchQuery %>"
  </h1>

  <% if (games.length === 0) { %>
  <p class="text-gray-400">No games found matching your search.</p>
  <% } else { %>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
  >
    <% games.forEach(game => { %>
    <div
      class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow"
    >
      <% if (game.background_image) { %>
      <img
        src="<%= game.background_image %>"
        alt="<%= game.name %>"
        class="w-full h-48 object-cover"
      />
      <% } else { %>
      <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
        <span class="text-gray-400">No image available</span>
      </div>
      <% } %>
      <div class="p-4">
        <h3 class="text-xl font-semibold text-white"><%= game.name %></h3>
        <div class="flex justify-between items-center mt-2">
          <% if (game.genres && game.genres.length > 0) { %>
          <span class="text-gray-400"><%= game.genres[0].name %></span>
          <% } %> <% if (game.rating) { %>
          <span class="text-yellow-400"><%= game.rating.toFixed(1) %>/5</span>
          <% } %>
        </div>
        <a
          href="/game/<%= game.id %>"
          class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md transition-colors"
        >
          View Details
        </a>
      </div>
    </div>
    <% }); %>
  </div>

  <!-- Pagenation Section -->
  <% if (totalPages > 1) { %>
  <div class="max-w-7xl mx-auto mt-8">
    <div class="flex justify-center mt-8">
    <nav class="flex items-center space-x-2">
      <% if (hasPreviousPage) { %>
        <a 
          href="/search-games?search=<%= searchQuery %>&page=<%= currentPage - 1 %>"
          class="px-4 py-2 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-700"
        >
          Previous
        </a>
      <% } %>

      <% if (startPage > 1) { %>
        <a 
          href="/search-games?search=<%= searchQuery %>&page=1"
          class="px-4 py-2 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-700"
        >
          1
        </a>
        <% if (startPage > 2) { %>
          <span class="px-2 text-gray-400">...</span>
        <% } %>
      <% } %>

      <% for (let i = startPage; i <= endPage; i++) { %>
        <a 
          href="/search-games?search=<%= searchQuery %>&page=<%= i %>"
          class="px-4 py-2 border <%= currentPage === i ? 'bg-indigo-600 text-white' : 'border-gray-600 text-gray-300' %> rounded-md hover:bg-gray-700"
        >
          <%= i %>
        </a>
      <% } %>

      <% if (endPage < totalPages) { %>
        <% if (endPage < totalPages - 1) { %>
          <span class="px-2 text-gray-400">...</span>
        <% } %>
        <a 
          href="/search-games?search=<%= searchQuery %>&page=<%= totalPages %>"
          class="px-4 py-2 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-700"
        >
          <%= totalPages %>
        </a>
      <% } %>

      <% if (hasNextPage) { %>
        <a 
          href="/search-games?search=<%= searchQuery %>&page=<%= currentPage + 1 %>"
          class="px-4 py-2 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-700"
        >
          Next
        </a>
      <% } %>
    </nav>
  </div>
  </div>

  <% } %> <% } %>
</main>

<%- include('partials/footer') %>
