{
  "name": "game-search-app",
  "version": "1.0.0",
  "description": "A fun and sleek website that allows users to search and explore video games across platforms, genres, and ratings",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "npm run watch:css & NODE_ENV=development nodemon index.js",
